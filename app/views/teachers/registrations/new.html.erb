<h2>Teacher Sign up</h2>
 
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
 <div class="form">

        <ul class="tab-group">
            <li class="tab active"><a href="#signup">Sign Up</a></li>
           
        </ul>

        <div class="tab-content">
            <div id="signup">
                <h1>Sign Up for Free</h1>

                <section class="my_signup">

                    <div class="top-row">
                        <div class="field-wrap">
                            <label>
                               First Name<span class="req">*</span>
                             </label>
                    <%= f.text_field :first_name, class: "my_inp", autofocus: true, autocomplete: "" %>
                </div>

                        <div class="field-wrap">
                            <label>
                                Last Name<span class="req">*</span>
                            </label>
                          <%= f.text_field :last_name, class: "my_inp", autofocus: true, autocomplete: "" %>
                   </div>
                    </div>

                    <div class="field-wrap">
                        <label>
                           Email Address<span class="req">*</span>
                     </label>
                           <%= f.email_field :email, class: "my_inp", autofocus: true, autocomplete: "email" %>
              </div>

                    <div class="top-row">
                        <div class="field-wrap">
                            <label>
                               <span class="req">*</span>
                            </label>
                  <%= f.date_field :DOB, class: 'dob_opt my_inp', autofocus: true, autocomplete: "" %>
                   </div>

                        <div class="field-wrap">
                            <label>
                                Highest Education<span class="req">*</span>
                             </label>
             <%= f.select :highest_education, options_for_select([  "High School", "College", "Masters",  "PhD"]),{}, class: 'dob_opt my_inp' ,   autofocus: true, autocomplete: "" %>
                    </div>
                    </div>
                 
                        <div class="field-wrap">
                            <label>
                               Description<span class="req">*</span>
                            </label>
                   <%= f.text_field :description, class: "my_inp", autofocus: true, autocomplete: "" %>
                   </div>


                    
                    <div class="field-wrap">
                        <label>
                              Set A Password<span class="req">*</span>
                        </label>
                                
                            <% if @minimum_password_length %>
                            <em>(<%= @minimum_password_length %> characters minimum)</em>
                            <% end %><br />
                            <%= f.password_field :password, class: "my_inp", autocomplete: "off" %>
                 </div>
                    <div class="field-wrap">
                        <label>
                            Confirm A Password<span class="req">*</span>
                        </label>
                             <%= f.password_field :password_confirmation, class: "my_inp", autocomplete: "off" %>
                 </div>
                             <%= f.file_field :avatar %>
                             
                          <%= f.submit "Sign up", class: "button button-block" %>
                          


                </section>

            </div>


        </div>
        <!-- tab-content -->

    </div>
<% end %>
