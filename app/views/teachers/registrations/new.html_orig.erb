<h2>Teacher Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <section class="wrapper">
         <div class="elem-row"> 
               <div class="field">
                <%= f.label :first_name,  class: 'mylabel' %>
                <%= f.text_field :first_name, autofocus: true, autocomplete: "" %>
              </div>

              <div class="field">
                <%= f.label :last_name,  class: 'mylabel' %>
                <%= f.text_field :last_name, autofocus: true, autocomplete: "" %>
              </div>
        

          <div class="field">
            <%= f.label :email, class: 'mylabel' %>
            
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </div>
        <div class="elem-row"> 
              <div class="field">
                <%= f.label :DOB, class: 'mylabel' %>
                <%= f.date_field :DOB, class: 'dob_opt', autofocus: true, autocomplete: "" %>
              </div>

              <div class="field">
                <%= f.label :highest_education, class: 'mylabel' %>
                <%= f.select :highest_education, options_for_select([ [ "High School",{class: 'dob_opt'}],[ "College",{class: 'dob_opt'}], [ "Masters",{class: 'dob_opt'}], [  "PhD",{class: 'dob_opt'} ] ], class: 'dob_opt' ),   autofocus: true, autocomplete: "" %>
              </div>

                <div class="field">
                <%= f.label :description, class: 'mylabel' %>
                <%= f.text_field :description, autofocus: true, autocomplete: "" %>
              </div>
         </div>
          <div class="elem-row">
              <div class="field">
                <%= f.label :password, class: 'mylabel' %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, class: 'mylabel', autocomplete: "off" %>
              </div>

              <div class="field">
                <%= f.label :password_confirmation, class: 'mylabel' %>
                <%= f.password_field :password_confirmation, class: 'mylabel', autocomplete: "off" %>
              </div>
          </div>
             
          <div>
            <%= f.file_field :avatar %>
          </div>
             
          <div class="actions">
            <%= f.submit "Sign up" %>
          </div>

          </section>
<% end %>


