<h2>Teacher Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
  <div class="form">

        <ul class="tab-group">
           
            <li class="tab active"><a href="#login">Log In</a></li>
        </ul>

        <div class="tab-content">
           

            <div id="login">
                <h1>Welcome Back!</h1>

                <section class="my_sign_in">
                    <div class="field-wrap">
                        <label>
                              Email Address<span class="req">*</span>
                            </label>
                  <%= f.email_field :email, class: "my_inp", autofocus: true, autocomplete: "email" %>

                    </div>

                    <div class="field-wrap">
                        <label>
                              Password<span class="req">*</span>
                            </label>
                      <%= f.password_field :password, class: "my_inp", autocomplete: "off" %>        

                    </div>
                    
                     <% if devise_mapping.rememberable? -%>
                        <div class="field-wrap">
                          <%= f.check_box :remember_me %>
                          <%= f.label :remember_me %>
                        </div>
                      <% end %>



                      <%= f.submit "Log in", class: "button button-block" %>

                </section>

            </div>

        </div>
        <!-- tab-content -->

    </div>
  
<% end %>


